<h1>{{categoria.nome}}</h1>
{{#each postagens}}
    <div class="card mt-3">
        <div class="car-body">
            <h3 class="text-justify mx-3" align="right">{{titulo}}</h3>
            <p class="text-justify ms-2">{{conteudo}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-primary btn-sm ms-2">Continuar lendo</button></a>
            <hr>
            <p class="text-justify ms-2">Data: {{data}}</p>
        </div>
    </div>
{{else}}
    <h5>Nenhuma postagem..</h5>
{{/each}}

<div class="mt-3"></div>