    <div class="alert alert-danger" role="alert">{{texto}}</div>
{{else}}
{{/each}}

<div class="mt-4">
    <h4>Registro de Usuário</h4>
</div>
<div class="card text-left mt-4">
  <div class="card-body">      
      <form action="" method="post">
            <label for="nome" class="mt-3">Nome: </label>
                <input type="text" name="nome" class="form-control" required>
            <label for="email" class="mt-3">Email: </label>
                <input type="email" name="email" class="form-control" required>
            <label for="senha" class="mt-3">Senha: </label>
                <input type="password" name="senha" class="form-control" required>
            <label for="confirm" class="mt-3">Confirmar Senha: </label>
                <input type="password" name="senha2" class="form-control" required>
            <button type="submit" class="btn btn-success mt-4">Cadastrar Usuário</button>        
      </form>    
  </div>
</div>
<div class="mt-3"></div>