{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Editar Postagem:</h1>
<div class="card">
    <div class="card-body">        
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" value="{{postagens._id}}" name="id">                         
            <label for="titulo" class="mt-2">Titulo: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}" required>
            <label for="slug" class="mt-2">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagens.slug}}" required>
            <label for="descricao" class="mt-2">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagens.descricao}}" required>
            <label for="conteudo" class="mt-4">Conteudo: </label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categoria" class="mt-4">Selecione uma categoria: </label><br>
            <select name="categoria" class="custom-select mt-2">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>
<div class="mt-3"></div>