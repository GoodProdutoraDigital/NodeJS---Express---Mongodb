<h2>Postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagen</button></a>

{{#each postagens}}
<div class="card mt-3">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <p>Descrição: {{descricao}}</p>
        <small>Data: {{data}}</small><br>
        <small>Categoria: {{categoria.nome}}</small><br>
        <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-warning mt-4">Editar Postagen</button></a>

        <div class="btn-group">
            <form action="/admin/postagens/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">Deletar</button>
            </form>
        </div>
    </div>
</div>
{{else}}
    <h4>Nenhuma postagem registrada!</h4>
{{/each}}

<div class="mt-3"></div>