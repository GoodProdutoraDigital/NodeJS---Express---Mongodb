{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h1>Nova Postagem:</h1>
<div class="card">
    <div class="card-body">        
        <form action="/admin/postagens/nova" method="post">            
            <label for="titulo" class="mt-2">Titulo: </label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug" class="mt-2">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao" class="mt-2">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo" class="mt-4">Conteudo: </label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria" class="mt-4">Categorias: </label><br>
            <select name="categoria" class="custom-select mt-2">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select><br>
            <button class="btn btn-success mt-4" type="submit">Adicionar Postagem</button>
        </form>
    </div>
</div>
<div class="mt-3"></div>